<%= turbo_frame_tag "leads_turbo_frame" do %>
  <div class="space-y-6">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
      <div>
        <h1 class="text-2xl font-bold tracking-tight">Lead Generation</h1>
        <p class="text-gray-600">Find and analyze potential customers with AI</p>
      </div>
    </div>
    <div class="space-y-6 mt-4">
        <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
          <div class="flex flex-col sm:flex-row gap-4">
            <div>
              <label class="input">
                <i data-lucide="search" class="w-5 h-5 text-gray-400"></i>
                <input type="search" required placeholder="Search..." />
              </label>
            </div>
          </div>
        </div>
    </div>
    <div class="space-y-4">
      <div role="tablist" class="tabs tabs-border">
        <%= link_to "Potential Company", potential_admin_companies_path,
            class: "tab #{current_page?(potential_admin_companies_path) ? 'tab-active' : ''}" %>

        <%= link_to "Decision Maker", decision_maker_admin_companies_path,
            class: "tab #{current_page?(decision_maker_admin_companies_path) ? 'tab-active' : ''}" %>

        <%= link_to "Predict Ability", predict_ability_admin_companies_path,
            class: "tab #{current_page?(predict_ability_admin_companies_path) ? 'tab-active' : ''}" %>
      </div>

      <% if current_page?(pending_admin_crawl_sources_path) %>
        <%= render 'pending' %>
      <% end %>

      <% if current_page?(admin_crawl_sources_path) %>
        <%= render 'manager' %>
      <% end %>

      <% if current_page?(history_admin_crawl_sources_path) %>
        <%=  render 'history' %>
      <% end %>
    </div>
  </div>
<% end %>
