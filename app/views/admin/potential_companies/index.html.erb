<div class="space-y-6">
  <%= render 'shared/lead_generation_filter',
            header: "Lead Generation",
            subheader: "Find and analyze potential customers with AI",
            url: admin_potential_companies_path,
            turbo_frame: "potential_companies_turbo_frame",
            placeholder: "Search..." %>
    <div class="space-y-4">
      <%= render partial: "shared/tabs", locals: {
        tabs: [
          { label: "Potential company", path: admin_potential_companies_path },
          { label: "Decision maker", path: admin_decision_maker_companies_path },
          { label: "Predict possibilities", path: admin_predict_ability_companies_path }
        ]
      } %>
      <%= turbo_frame_tag "potential_companies_turbo_frame" do %>
        <%= render 'admin/potential_companies/list_potential_companies' %>
      <% end %>
    </div>
</div>
