<div class="rounded-lg border bg-card text-card-foreground shadow-sm mt-6">
  <div class="flex flex-col space-y-1.5 p-6">
    <h3 class="text-2xl font-semibold leading-none tracking-tight">Suggested next action</h3>
    <p class="text-sm text-muted-foreground">AI suggests priority actions based on pipeline status</p>
  </div>
  <div class="p-6 pt-0">
    <div class="space-y-4">
      <% @lead_suggestions.each do |lead| %>
        <% suggestion = JSON.parse(lead.suggestions || "{}") %>
        <div class="flex items-start gap-3 p-3 rounded-lg border border-gray-200 bg-white hover:bg-gray-50">
          <div class="flex h-8 w-8 flex-shrink-0 items-center justify-center rounded-full bg-blue-100 text-green-600">
            <i data-lucide="sparkles" class="lucide lucide-sparkles h-4 w-4"></i>
          </div>
          <div class="space-y-2">
            <h4 class="font-medium"><%= suggestion["suggested_action"] %></h4>
            <p class="text-sm text-gray-600"><%= suggestion["reasoning"] %></p>
            <strong class="text-sm">Win probability: <%= suggestion["win_probability"] %>%</strong>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
